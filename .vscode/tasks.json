{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO: Build",
			"type": "shell",
			"command": "pio",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "PlatformIO: Upload",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"upload"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "PlatformIO: Upload Filesystem",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"uploadfs"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "PlatformIO: Monitor",
			"type": "shell",
			"command": "pio",
			"args": [
				"device",
				"monitor"
			],
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "PlatformIO: Clean",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"clean"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Build for ESP32-S3",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--environment",
				"esp32-s3-devkitc-1"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "Upload to ESP32-S3",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"upload",
				"--environment",
				"esp32-s3-devkitc-1"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "Build Antenna Fix",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--environment",
				"esp32-s3-devkitc-1"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$platformio"
			]
		},
		{
			"label": "Build Dashboard Graph",
			"type": "shell",
			"command": "platformio run",
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}